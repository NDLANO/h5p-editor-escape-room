{
  "globals": {
    "H5P": "readonly",
    "H5PEditor": "readonly",
    "H5PIntegration": "readonly"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended", "plugin:react/recommended", "eslint-config-ndla-h5p"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "object-curly-spacing": ["error", "always"],
    "react/prop-types": 0
  }
}
